@model IEnumerable<Movie>

@{
    ViewBag.Title = "All Movies";
}
<h1 style="color: whitesmoke;">All Movies</h1>

@if (Model.Any())
{
    <a asp-action="RegisterMovie" asp-controller="Admin"
   class="btn btn-primary mb-3" style="width:auto">
        Add New Movie
    </a>

    foreach (var movie in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Genre: @movie.Genre.GenreName
            </div>
            <div class="card-body">
                <h5 class="card-title">@movie.Title</h5>
            </div>
            <div class="card-footer">
                <a asp-controller="Admin" asp-action="EditMovie" asp-route-id="@movie.MovieId" class="btn btn-danger">Edit</a>
                <a asp-controller="Admin" asp-action="DeleteMovie" asp-route-id="@movie.MovieId" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No Movies created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a movie
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="Admin" asp-action="RegisterMovie">
                Add New Movie
            </a>
        </div>
    </div>
}
