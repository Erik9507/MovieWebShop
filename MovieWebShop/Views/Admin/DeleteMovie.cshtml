@model Movie

<h1 style="color: whitesmoke">Delete</h1>

<h3 style="color: whitesmoke">Do you really want to delete this movie?</h3>

<div>
    <dl class="row">
        <h5 style="color: whitesmoke">
            @Model.Title
        </h5>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.MovieId">
        <input type="hidden" asp-for="MovieId" />
        <input type="submit" value="delete" class="btn btn-danger" />
        <a asp-action="ListMovies">Back to home</a>
    </form>
</div>