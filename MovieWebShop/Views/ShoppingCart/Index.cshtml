@using MovieWebShop.ViewModels
@model ShoppingCartViewModel

<h2>Shopping Cart</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>

            <th>Selected Amount</th>
            <th>Movie</th>
            <th class="text-right">Price</th>
            <th class="text-right">Subtotal</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
        {
            <tr>
                <td class="text-left">
                    <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart"
                   asp-route-id="@item.Movie.MovieId">-</a>
                    @item.Quantity
                    <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddInCart"
                   asp-route-id="@item.Movie.MovieId">+</a>
                </td>
                <td class="text-left">@item.Movie.Title</td>
                <td class="text-right">@item.Movie.Price.ToString("c")</td>
                <td class="text-right">@((item.Quantity * item.Movie.Price).ToString("c"))</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4" class="text-right">Total: @Model.ShoppingCartTotal.ToString("c")</td>
        </tr>
    </tfoot>
</table>
<div class="text-center">
    <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="CreateOrder">CheckOut</a>
</div>
<div class="text-center">
    <a class="btn btn-primary" asp-controller="ShoppingCart" asp-route-id="@Model.ShoppingCart.ShoppingCartID" asp-action="ClearCart">Clear Cart</a>
</div>

