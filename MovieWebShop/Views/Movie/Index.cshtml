@using MovieWebShop.ViewModels
@model HomeViewModel

<div class="black-bar">
<h1 style="color:whitesmoke; text-align:center">Upcoming Movies</h1>
</div>
<div class="container-fluid bg-trasparent my-4 p-3" style="position: relative;">
    <div class="row row-cols-1 row-cols-xs-2 row-cols-sm-2 row-cols-lg-4 g-3">

        @foreach (var item in Model.results)
        {

            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@item.poster_path" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title" style="text-align:center">
                            @item.title
                        </h5>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="row">
    <div class="black-bar">
    <h1 style="color:whitesmoke; text-align:center">Movies in stock</h1>
    </div>
    @foreach (var item in Model.getMovies)
    {

        <partial name="Components//MovieCard" model="item" />
    }
</div>
